
<div class="container p-4">
	<div class="row">
		{{#each links}}
		<div class="col-md-4 mx-auto">
			<div class="card">
				<div class="card-body">
					<form action="/links/modify/{{id}}" method="post">
						<div class="form-group">
							<input type="text" class="form-control" name="title"  value="{{title}}" autofocus>
						</div>
						<div class="form-group">
							<input type="url" name="url" class="form-control" value="{{url}}" >
						</div>
						<div class="form-group">
							<textarea name="description" class="form-control" rows="2">{{description}}</textarea>
						</div>
						<div class="form-group">
							<button class="btn btn-success btn-block">
								Guardar
							</button>
						</div>	


						

					</form>
				</div>
			</div>
		</div>
		{{/each}}
		
	</div>
</div>
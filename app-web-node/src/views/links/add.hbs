<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card">
				<div class="card-body">
					<form action="/links/add" method="post">
						<div class="form-group">
							<input type="text" class="form-control" name="title" placeholder="Titulo" autofocus>
						</div>
						<div class="form-group">
							<input type="url" name="url" class="form-control" placeholder="Url">
						</div>
						<div class="form-group">
							<textarea name="description" class="form-control" rows="2" placeholder="Descripcion"></textarea>
						</div>
						<div class="form-group">
							<button class="btn btn-success btn-block">
								Guardar
							</button>
						</div>						
					</form>
				</div>
			</div>
		</div>
		
	</div>
</div>

